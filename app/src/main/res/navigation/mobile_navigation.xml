    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.budgetapp.Activity.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.example.budgetapp.Activity.ui.transactions.TransactionsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_transactions" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.budgetapp.Activity.ui.categories.NotificationsFragment"
        android:label="@string/title_notifications"
